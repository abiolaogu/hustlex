<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
    
    <!-- Production domains with certificate pinning -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.hustlex.app</domain>
        <domain includeSubdomains="true">hustlex.app</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Third party services -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">paystack.co</domain>
        <domain includeSubdomains="true">api.paystack.co</domain>
        <domain includeSubdomains="true">fcm.googleapis.com</domain>
    </domain-config>
</network-security-config>
